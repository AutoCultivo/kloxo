#!/bin/sh

INIT_DIR="/usr/local/lxlabs/kloxo/init"

chmod 755 ${INIT_DIR}/php52s-cli.sh
chmod 755 ${INIT_DIR}/php52s-cgi.sh

if [ "$1" != "" ] ; then
	base_name=$1
else
	base_name="php53s"
fi

if [ -f /opt/${base_name}/usr/bin/php ] ; then
	chmod 755 ${INIT_DIR}/${base_name}-cli.sh
	chmod 755 ${INIT_DIR}/${base_name}-cgi.sh
	chmod 755 ${INIT_DIR}/${base_name}-fpm.sh
	chmod 755 ${INIT_DIR}/${base_name}-ls.sh

	ln -sf ${INIT_DIR}/${base_name}-cli.sh /usr/bin/lphp.exe
	ln -sf ${INIT_DIR}/${base_name}-cli.sh /usr/bin/lxphp.exe
elif [ -f /opt/php52s/usr/bin/php ] ; then
	ln -sf ${INIT_DIR}/php52s-cli.sh /usr/bin/lphp.exe
	ln -sf ${INIT_DIR}/php52s-cli.sh /usr/bin/lxphp.exe
elif [ -f /opt/php52s/bin/php ] ; then
	ln -sf ${INIT_DIR}/php52s-cli.sh /usr/bin/lphp.exe
	ln -sf ${INIT_DIR}/php52s-cli.sh /usr/bin/lxphp.exe
fi
