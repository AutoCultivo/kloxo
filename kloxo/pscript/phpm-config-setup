#!/bin/sh

base_name="${1}"

## MR -- remove last char (default m or s)
src_name="${base_name%?}"

if [ "$(uname -m)" == "x86_64" ] ; then
	uname_m="64"
else
	uname_m=""
fi

x="- Disable certain modules (rename to .nonini) in '/etc/${base_name}/etc/' + 'php.d' and 'php-zts.d'"
echo $x
echo $x >>/opt/${base_name}/install.log

for i in dba dbase eaccelerator ioncube pdo_dblib pdo_odbc pdo_pgsql pgsql suhosin odbc mongo \
	apc apcu imagick interbase ioncube-loader memcache memcached mssql debug \
	pdo_dblib pdo_firebird mysqlnd_ms mysqlnd_mysql mysqlnd_mysqli mysqlnd pdo_mysqlnd \
	xdebug xcache opcache lzf redis enchant ; do

	for j in php.d php-zts.d ; do
		if [ -f /opt/${base_name}/etc/${j}/${i}.ini ] ; then
			## MR -- remove path in 'extension='
			sed -i 's:/usr/lib'${uname_m}'/php/modules::' /opt/${base_name}/etc/${j}/${i}.ini

			if [ "$(echo ${i}|grep mysqlnd)" != "" ] ; then
				## MR -- using mysqlnd instead mysql/mysqli in php54s
				x="-- Enable 'mysqlnd' instead 'mysql' modules in '/etc/${base_name}/etc/${j}'"
				echo $x
				echo $x >>/opt/${base_name}/install.log

				if [ -f /opt/${base_name}/etc/php.d/mysql.ini ] ; then
					\mv -f /opt/${base_name}/etc/${j}/mysql.ini /opt/${base_name}/etc/${j}/mysql.nonini
					\mv -f /opt/${base_name}/etc/${j}/mysqli.ini /opt/${base_name}/etc/${j}/mysqli.nonini
					\mv -f /opt/${base_name}/etc/${j}/pdo_mysql.ini /opt/${base_name}/etc/${j}/pdo_mysql.nonini
				fi
			else
				x="-- Disable '${i}' modules in '/etc/${base_name}/etc/${j}'"
				echo $x
				echo $x >>/opt/${base_name}/install.log

				\mv -f /opt/${base_name}/etc/${j}/${i}.ini /opt/${base_name}/etc/${j}/${i}.nonini
			fi
		fi
	done
done

cd /opt/${base_name}

mkdir -p /opt/${base_name}/custom

x="- Copy certain files to '/opt/${base_name}/custom'"
echo $x
echo $x >>/opt/${base_name}/install.log

\cp -rf /usr/local/lxlabs/kloxo/init/${base_name}/* /opt/${base_name}/custom/

x="- Set .sh to 755"
echo $x
echo $x >>/opt/${base_name}/install.log

chmod 755 /opt/${base_name}/custom/*.sh

x="- Create .sh symlink"
echo $x
echo $x >>/opt/${base_name}/install.log

for i in cgi cli ls fpm ; do
	if [ -f /usr/local/lxlabs/kloxo/init/${base_name}/${base_name}-${i}.sh ] ;  then
		x="-- From '/opt/${base_name}/custom/${base_name}-${i}.sh' to '/usr/bin/${base_name}-${i}'"
		echo $x
		echo $x >>/opt/${base_name}/install.log

		\rm -f /usr/bin/${base_name}-${i}
		ln -sf /opt/${base_name}/custom/${base_name}-${i}.sh /usr/bin/${base_name}-${i}
	fi
done

#if [ "${src_name}" != "php52" ] ; then
#	## MR -- php53/php54/php55 must to blank extenstion_dir in php.ini and set directly to each module ini
#	echo "- Change '${base_name}' extension path for modules ini..."
#	for i in /opt/${base_name}/etc/php.d/* ; do
#		if [ "$(find ${i} -type f | xargs grep 'extension=/opt/')" == "" ] ; then
#			if [ "$(find ${i} -type f | xargs grep 'extension=/usr/lib')" != "" ] ; then
#				sed -i 's:extension=/usr/lib/:extension=/opt/'${base_name}'/usr/lib'${uname_m}'/:' ${i}
#				sed -i 's:extension=/usr/lib'${uname_m}'/:extension=/opt/'${base_name}'/usr/lib'${uname_m}'/:' ${i}
#			else
#				if [ "$(find ${i} -type f | xargs grep 'extension = ')" != "" ] ; then
#					sed -i 's:extension = :extension=/opt/'${base_name}'/usr/lib'${uname_m}'/php/modules/:' ${i}
#				else
#					sed -i 's:extension=:extension=/opt/'${base_name}'/usr/lib'${uname_m}'/php/modules/:' ${i}
#				fi
#			fi
#		fi
#	done
#else
	## MR -- php52 only work if add extension_dir path
	#echo "- Change '${base_name}' for php.ini..."
	#if [ "${base_name}" == "php52m" ] ; then
	#	sed -i 's:/usr/lib/php/modules:/usr/lib'${uname_m}'/php/modules:' /opt/${base_name}/custom/php.ini
	#fi

	#sed -i 's:/usr/lib/php/modules:/usr/lib'${uname_m}'/php/modules:' /opt/${base_name}/custom/${base_name}.ini

	if [ "${uname_m}" == "64" ] ; then
		x="- Create symlink from /opt/${base_name}/usr/lib64 to /opt/${base_name}/usr/lib"
		echo $x
		echo $x >>/opt/${base_name}/install.log

		if [ -d /opt/${base_name}/usr/lib ] ; then
			ln -sf /opt/${base_name}/usr/lib64/php /opt/${base_name}/usr/lib/php

			if [ -d /opt/${base_name}/usr/lib64/php-zts ] ; then
				ln -sf /opt/${base_name}/usr/lib64/php-zts /opt/${base_name}/usr/lib/php-zts
			fi
		else
			ln -sf /opt/${base_name}/usr/lib64 /opt/${base_name}/usr/lib
		fi
	fi
#fi