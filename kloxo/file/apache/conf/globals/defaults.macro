<Macro init $ip $port $portssl $dirindex $certname>

Listen ${ip}:${port}
Listen ${ip}:${portssl}

<IfVersion < 2.4>
	NameVirtualHost ${ip}:${port}
	NameVirtualHost ${ip}:${portssl}
</IfVersion>


### cp
<VirtualHost ${ip}:${port}>

	ServerName cp

	ServerAlias cp.*

	DocumentRoot "/home/kloxo/httpd/cp"

	DirectoryIndex ${dirindex}

	<IfModule suexec.c>
		SuexecUserGroup apache apache
	</IfModule>

	<IfModule mod_suphp.c>
		SuPhp_UserGroup apache apache
	</IfModule>

	<IfModule mod_fastcgi.c>
		Alias /cp.0fake "/home/kloxo/httpd/cp/cp.0fake"
		#FastCGIExternalServer "/home/kloxo/httpd/cp/cp.0fake" -host ${ip}:50000 -idle-timeout 180
		FastCGIExternalServer "/home/kloxo/httpd/cp/cp.0fake" -socket /home/php-fpm/sock/apache.sock -idle-timeout 180
		AddType application/x-httpd-fastphp .php
		Action application/x-httpd-fastphp /cp.0fake
		<Files "cp.0fake">
			RewriteCond %{REQUEST_URI} !cp.0fake
		</Files>
	</IfModule>

	<Location />
		Allow from all
		# Options +Indexes +FollowSymlinks
		Options +Indexes -FollowSymlinks +SymLinksIfOwnerMatch
	</Location>

</VirtualHost>


### default
<VirtualHost ${ip}:${port}>

	ServerName default

	ServerAlias default.*

	DocumentRoot "/home/kloxo/httpd/default"

	DirectoryIndex ${dirindex}

	Include "/home/apache/conf/globals/userdir.conf"

	<IfModule suexec.c>
